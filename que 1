#include <iostream>
#include <iomanip>
using namespace std;
struct item{
    int id;
    float cost;
};
int main() {
    item items[6]{
        {1, 18.80},
        {2, 92.30},
        {3,73.00},
        {4 ,45.98},
        {0 ,0.00},
        {0, 0.00}
        
        
    };
    
    cout <<" items with cost>50.00"<<endl;
    bool found =false;
    for (int i=0;i<6;++i){
        if (items[i].cost>50.00){
            cout<<"item"<<(i+1)
               <<" id :"<<items[i].id
               <<" cost:"<<items [i].cost<<endl;
            found=true;
        }
    }
    if(!found){
        cout<<"no items cost >50.00 found ."<<endl;
    }
    

    return 0;
}
